# Editor configuration, see https://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.ts]
indent_style = tab
indent_size = 4
quote_type = single
max_line_length = off

[*.js]
indent_style = tab
indent_size = 2

[*.scss]
indent_style = tab
indent_size = 2

[*.html]
indent_style = tab
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
