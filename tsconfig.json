{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
    "allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
    "strictNullChecks" : false,
		// "emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es6",
		"typeRoots": [
			"node_modules/@types",
      "node_modules/ammojs-typed/ammo/ambient"
		],
    "downlevelIteration": true,
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ]    
  },
  "typedocOptions" : {
    "entryPoints": ["src/app/three/index.ts"],
    "out" : "docs"
  },
  "angularCompilerOptions" : {
    "strictTemplates" : true
  }
}
